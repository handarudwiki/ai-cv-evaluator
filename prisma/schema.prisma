generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Document {
  id String @id @default(uuid())
  fileName String
  filePath String
  type DocumentType

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("documents")
}

enum DocumentType{
  CV
  PROJECT_REPORT
  JOB_DESCRIPTION
  CASE_STUDY
  CV_RUBRIC
  PROJECT_RUBRIC
}